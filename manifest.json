{
    "name": "AI Education",
    "version": "0.1",
    "description": "Educate people about AI online!",
    "manifest_version": 2,
    "icons": {
        "16": "./publc/images/icon16.png",
        "48": "./public/images/icon48.png",
        "128": "./public/images/icon128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches":[
                "<all_urls>"
            ],
            "css": ["./public/styles/tooltip.css"],
            "js": [
                "./libraries/popper.min.js",
                "./libraries/index.all.min.js",
                "./src/fb.js",
                "./src/amzn.js",
                "./src/ta.js",
                "./src/content.js"
            ]
        }
    ],
    "background": {
        "scripts": ["./src/background.js"]
    },
    "browser_action": {
        "default_icon": "./public/images/iconChrome.png",
        "default_title": "Learn how AI is used on this site!",
        "default_popup": "./public/popup.html"
    },
    "web_accessible_resources": [
        "public/images/*"
    ]
  }
