{
    "name": "AI Education",
    "version": "0.1",
    "description": "Educate people about AI online!",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "tabs",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches":[
                "http://www.facebook.com/*",
                "https://www.facebook.com/*",
                "https://web.facebook.com/*",
                "http://www.amazon.com/*",
                "https://www.amazon.com/*",
                "http://www.tripadvisor.com/*",
                "https://www.tripadvisor.com/*"
            ],
            "css": ["./public/styles/tooltip.css"],
            "js": [
                "./libraries/popper.min.js",
                "./libraries/index.all.min.js",
                "./src/fb.js",
                "./src/amzn.js",
                "./src/ta.js",
                "./src/content.js"
            ]
        }
    ],
    "background": {
        "scripts": ["./src/background.js"]
    },
    "browser_action": {
        "default_icon": "./public/images/iconChrome.png",
        "default_title": "Learn how AI is used on this site!",
        "default_popup": "./public/popup.html"
    },
    "web_accessible_resources": [
        "public/images/*"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
