{
    "name": "AI Education",
    "version": "0.1",
    "description": "Educate people about AI online!",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches":[
                "<all_urls>"
            ],
            "js": ["./src/content.js"]
        }
    ],
    "background": {
        "scripts": ["./src/background.js"]
    },
    "browser_action": {
        "default_icon": "./public/images/logo.png",
        "default_title": "Learn how AI is used on this site!",
        "default_popup": "./public/popup.html"
    }
  }
